<html>

	<head>
		<title>Sudoku Game</title>
		<link href = "/stylesheets/application.css" rel="stylesheet" type="text/css" >
	</head>
	<body>
    <h1>Sudoku</h1>
    <div id="flash">
      <%= flash[:notice] %>
    </div>
    <form action="/difficulty" method="post" >
      <button name="level" value="6" >Easy</button> 
      <button name="level" value="4" >Medium</button> 
      <button name="level" value="2" >Hard</button> 
    </form>
    <form action="/" method="post" >
      <div id="sudoku">
        <!-- one div for each row -->
        <% 3.times do |row| %>
          <div class='row'>
            <!-- we want to create separate div elements for boxes to style them using CSS -->
            <% 3.times do |box| %>
              <div class="box">
                <!-- each box will have nine cells -->
                <% 3.times do |cell_row| %>
                  <div class="cell-row">
                    <% 3.times do |cell| %>
                      <div class="cell">
                        <%= partial :cell, :locals=>{:cell_index => row*27+box*3+cell_row*9+cell} %>
                      </div>
                    <% end %>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        <% end %>
        <button>Check solution</button>
      </div>
    </form>
	</body>

</html>